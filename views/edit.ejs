<!-- edit.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>editar</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

  <%- include('head'); -%>
</head>
<body>
  <h1>editar Item</h1>
  <form method="POST" action="/edit/<%= item._id %>">
  <div class="form">
    <label for="title">Title:</label>
    <input type="text" id="titleForm" name="title" value="<%= item.title %>">
  </div>
  <div class="form">
    <label for="description">Description:</label>
    <input type="text" id="descriptionForm" name="description" value="<%= item.description %>">
  </div>
  <div>
    <label for="date">Date:</label>
    <input type="date" name="date" value="<%= item.date %>">
  </div>
  <button type="submit">Salvar</button>
  <a href="/list" class="btn btn-secondary">Cancelar</a>
</form>
</body>
</html>